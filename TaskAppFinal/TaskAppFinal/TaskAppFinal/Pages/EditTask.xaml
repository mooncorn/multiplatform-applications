<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TaskAppFinal.Pages.EditTask">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="TaskUid"/>
            <Entry x:Name="TaskUid" IsReadOnly="True"/>
            <Label Text="Description"/>
            <Entry x:Name="Description" IsReadOnly="True"/>
            <Label Text="AssignedToName"/>
            <Entry x:Name="AssignedToName" IsReadOnly="True"/>
            <Label Text="AssignedToUid"/>
            <Entry x:Name="AssignedToUid" IsReadOnly="True"/>
            <Label Text="CreatedByName"/>
            <Entry x:Name="CreatedByName" IsReadOnly="True"/>
            <Label Text="CreatedByUid"/>
            <Entry x:Name="CreatedByUid" IsReadOnly="True"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Done" VerticalOptions="Center"/>
                <Switch x:Name="SwitchDone" Toggled="SwitchDone_Toggled"/>
            </StackLayout>
            <Label x:Name="Message"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

